<form action="/posts/new" method="POST" enctype="multipart/form-data" class="card" style="margin-bottom: 24px;">
  <h3>New Post</h3>
  <input type="hidden" name="trip_id" value="<%= trip.id %>" />

  <textarea name="content" rows="3" placeholder="What's going on?" style="width: 100%; padding: 8px;"></textarea>

  <div style="margin-top: 8px;">
    <label for="image">Optional image:</label>
    <input type="file" name="image" accept="image/*">
  </div>

  <button type="submit" class="button" style="margin-top: 12px;">Post</button>
</form>
