<!-- Like button (HTMX) -->
<form hx-post="/trips/<%= trip.slug %>/posts/likes/toggle" hx-vals='{"post_id": <%= post.id %>}' hx-target="this" hx-swap="outerHTML"
    style="display:inline">
    <button class="button" title="Like">
        <% if (post.liked_by_user) { %>❤️<% } else { %>🤍<% } %>
        <%= post.like_count || 0 %>
    </button>
</form>