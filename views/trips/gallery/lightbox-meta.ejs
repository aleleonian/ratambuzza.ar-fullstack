<div class="lightbox-meta">
    <div class="uploader-info">
        <img src="/images/avatars/thumbs/<%= media.uploader_avatar %>" alt="<%= media.uploader_name %>"
            class="avatar-small">
        <span><%= media.uploader_name %></span>
    </div>

    <div class="tags">
        <% if (media.tags && media.tags.length) { %>
        <% media.tags.split(',').forEach(tag => { %>
        <span class="tag-pill"><%= tag.trim() %></span>
        <% }) %>
        <% } else { %>
        <span>No tags</span>
        <% } %>
    </div>

    <div id="lightbox-metadata" 
    data-media-id="<%=media.id%>" 
    data-liked="<%=media.userLiked%>" 
    data-like-count="<%=media.likesCount%>" 
    data-media-url="<%=media.url%>" 
    >
    <!-- data-owner="true"> -->
    </div>

    <!-- <input type="hidden" id="lightbox-meta-userLiked" value="<%=media.userLiked%>">
    <input type="hidden" id="lightbox-meta-likesCount" value="<%=media.likesCount%>">
    <input type="hidden" id="lightbox-meta-itemUrl" value="<%=media.url%>">
    <input type="hidden" id="lightbox-meta-mediaId" value="<%=media.id%>"> -->

    <div class="likes">
        ❤️ <%= media.likesCount %>
        <% if (media.userLiked) { %>
        <span>(You liked this)</span>
        <% } %>
    </div>
</div>