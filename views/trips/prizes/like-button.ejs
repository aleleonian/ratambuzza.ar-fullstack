<button class="like-button <%= prize.liked_by_user ? 'liked' : '' %>"
        hx-post="/trips/<%=currentOrUpcomingTrip.slug%>/playground/prizes/likes/toggle"
        hx-vals='{"prize_id": "<%= prize.id %>"}'
        hx-target="#prize-like-<%= prize.id %>"
        hx-swap="innerHTML">
    <span class="like-icon"><%= prize.liked_by_user ? '❤️' : '🤍' %></span>
    <span class="like-count"><%= prize.like_count %></span>
</button>

<style>
    .like-button {
        display: flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border: 2px solid var(--border-color);
        background: var(--bg-primary);
        border-radius: 20px;
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: 0.9em;
    }

    .like-button:hover {
        transform: scale(1.05);
        border-color: var(--accent-1);
    }

    .like-button.liked {
        background: var(--accent-1);
        color: white;
        border-color: var(--accent-1);
    }

    .like-icon {
        font-size: 1.1em;
    }

    .like-count {
        font-weight: bold;
    }
</style>
