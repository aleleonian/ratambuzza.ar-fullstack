<!-- Like button (HTMX) -->
<form hx-post="/trips/<%= trip.slug %>/likes/toggle" hx-vals='{"post_id": <%= post.id %>}' hx-target="this" hx-swap="outerHTML"
    style="display:inline">
    <button class="button">
        <% if (post.liked_by_user) { %>❤️ Liked<% } else { %>🤍 Like<% } %>
        (<%= post.like_count || 0 %>)
    </button>
</form>