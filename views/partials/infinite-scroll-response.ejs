<!-- New posts -->
<% posts.forEach(post => { %>
<%- include('post', { post }) %>
<% }) %>

<!-- Update the loading trigger -->
<div 
    id="infinite-scroll-trigger"
    hx-get="<%= moreUrl %>"
    hx-trigger="revealed"
    hx-target="#posts-container"
    hx-swap="beforeend"
    hx-swap-oob="true"
>
    <% if (moreUrl) { %>
    <p>Loading more posts...</p>
    <% } else { %>
    <p>No more posts to load</p>
    <% } %>
</div>